{
  "compilerOptions": {
    "esModuleInterop": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", ".mastra"]
}
